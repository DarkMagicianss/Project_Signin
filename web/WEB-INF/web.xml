<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>cn.user.servlet.RegServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckServlet</servlet-name>
        <servlet-class>cn.user.servlet.CheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckServlet</servlet-name>
        <url-pattern>/checkcode</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>cn.user.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerFindAllServlet</servlet-name>
        <servlet-class>cn.customer.servlet.CustomerFindAllServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerFindAllServlet</servlet-name>
        <url-pattern>/findAll</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerDelByIdServlet</servlet-name>
        <servlet-class>cn.customer.servlet.CustomerDelByIdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerDelByIdServlet</servlet-name>
        <url-pattern>/delById</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerFindByIdServlet</servlet-name>
        <servlet-class>cn.customer.servlet.CustomerFindByIdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerFindByIdServlet</servlet-name>
        <url-pattern>/findById</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerUpdateServlet</servlet-name>
        <servlet-class>cn.customer.servlet.CustomerUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerUpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerAddServlet</servlet-name>
        <servlet-class>cn.customer.servlet.CustomerAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerAddServlet</servlet-name>
        <url-pattern>/addCus</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerDelSomeServlet</servlet-name>
        <servlet-class>cn.customer.servlet.CustomerDelSomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerDelSomeServlet</servlet-name>
        <url-pattern>/delSome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ajaxServlet</servlet-name>
        <servlet-class>cn.ajax.ajaxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ajaxServlet</servlet-name>
        <url-pattern>/ajax</url-pattern>
    </servlet-mapping>
</web-app>